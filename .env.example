# JWT asymmetric keys
JWT_PRIVATE_KEY_PATH=keys/dev.private.pem
JWT_PUBLIC_KEY_PATH=keys/dev.public.pem
JWT_EXPIRY_HOURS=24
JWT_CLOCK_SKEW_SECONDS=30

# Docker compose host key file overrides
JWT_PRIVATE_KEY_FILE=./keys/dev.private.pem
JWT_PUBLIC_KEY_FILE=./keys/dev.public.pem
TEST_JWT_PRIVATE_KEY_FILE=./keys/dev.private.pem
TEST_JWT_PUBLIC_KEY_FILE=./keys/dev.public.pem

# Frontend service (BFF)
AUTH_SERVICE_URL=http://auth-service:5000
AUTH_SERVICE_TIMEOUT=5
TASK_SERVICE_URL=http://task-service:5000
TASK_SERVICE_TIMEOUT=5

# Task service
DATABASE_URL=sqlite:///instance/tasks.db

# Gateway
FRONTEND_SERVICE_URL=http://frontend-service:5000
PROXY_TIMEOUT=10

# Test/E2E
TEST_BASE_URL=http://localhost:5000
E2E_COMPOSE_FILE=docker-compose.test.yml
